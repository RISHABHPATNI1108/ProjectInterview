<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp"
    tools:targetApi="lollipop">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text_threads"
        android:text="@string/title_threads"
        android:textSize="20sp"
        android:padding="4dp"
        android:background="@drawable/title_round_upper"
        android:textColor="@color/white"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/text_threads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_text_threads"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tag1_threads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tag 1"
            android:background="@drawable/tag_round"
            android:textColor="#000000"
            android:paddingLeft="4dp"
            android:drawableLeft="@drawable/tag"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tag2_threads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tag 2"
            android:paddingLeft="4dp"
            android:background="@drawable/tag_round"
            android:textColor="#000000"
            android:drawableLeft="@drawable/tag"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tag3_threads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tag 3"
            android:background="@drawable/tag_round"
            android:drawableLeft="@drawable/tag"
            android:drawablePadding="4dp"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginRight="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="4dp"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:id="@+id/username_threads"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textAlignment="viewEnd"
            android:id="@+id/time_threads"
            android:layout_weight="1"
            android:gravity="end" />


    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>